---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import SubmissionForm from '../components/SubmissionForm.tsx';
---

<Layout title="Submit a Resource - Leak Media">
  <Navigation />
  <main class="main-content">
    <div class="container">
      <h1 class="page-title">Submit a Resource</h1>
      <div class="submission-form-container">
        <SubmissionForm client:load />
      </div>
    </div>
  </main>
</Layout>

<style>
  .main-content {
    @apply pt-24 pb-20;
  }

  .container {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }

  .page-title {
    @apply text-4xl font-bold mb-8 text-center;
  }
</style>
